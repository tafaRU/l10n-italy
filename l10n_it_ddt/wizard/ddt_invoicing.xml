<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_ddt_invoicing" model="ir.ui.view">
            <field name="name">DdT Invoicing</field>
            <field name="model">ddt.invoicing</field>
            <field name="arch" type="xml">
              <form string="DDT Invoicing">
                <separator string="DDT" />
                    <field string="DDT" name="ddt_ids" readonly="1"/>
                    <footer>
                        <button name="create_invoice" string="Create" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
            </form>
            </field>
        </record>

        <record id="action_ddt_invoicing" model="ir.actions.act_window">
            <field name="name">DDT Invoicing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ddt.invoicing</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ddt_invoicing"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="ddt_invoicing">
            <field name="model_id" ref="stock_picking_package_preparation.model_stock_picking_package_preparation" />
            <field name="name">Create Invoice</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_ddt_invoicing'))" />
            <field name="key">action</field>
            <field name="model">stock.picking.package.preparation</field>
        </record>

</odoo>
