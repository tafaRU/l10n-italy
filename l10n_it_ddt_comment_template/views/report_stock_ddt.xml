<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="report_invoice_document_comments"
      inherit_id="l10n_it_ddt.report_ddt">
      <xpath expr="//div[contains(@class, 'page')]/table[1]" position="before">
        <p t-if="o.note1">
          <span t-field="o.note1"/>
        </p>
      </xpath>
      <xpath expr='//t[@t-call="l10n_it_ddt.delivery_data"]' position="before">
        <p t-if="o.note2">
          <span t-field="o.note2"/>
        </p>
      </xpath>
    </template>
  </data>
</openerp>
